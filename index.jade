
include site/_config.jade

+html5
  +head(title, stylesheets, keywords, description)
  body(ng-app="theApp")
    
    header(data-sr="enter top move 24px scale 0%", data-scroll-header, role="main")
      #header
        .container
          .logotipo
            a(href="#inicio", data-scroll): img(src="site/img/ddm_logotipo.png")
          nav.col10.push1.col-t12.push-t0.col-m12.push-m0
            +menu('inicio', menu, 'horizontal', '#', ' ', '', {'data-scroll':true, 'du-scrollspy':true, 'offset':'200'} )
      
      +sliderbg('#inicio', 'site/img/slider1.jpg')
    section#inicio
      a(href="#productos", data-scroll).getInBtn
        img(src="site/img/ddm_logotipo.png", alt="DDM")
        div Entrar



                
    section#productos
      header(role="heading", data-sr="enter bottom scale down 50%")
        .container
          h2.col12 Productos
      .container(ng-controller="loadCardiologia").w100
        a(href="#", role="contentinfo", ng-click="showThis = !showThis").col9.push3.col-t12.push-t0.col-m12.push-m0.card: span Cardiología
        +productContent    
      .container(ng-controller="loadVascular").w100
        a(href="#", role="contentinfo", ng-click="showThis = !showThis").col9.push3.col-t12.push-t0.col-m12.push-m0.vas: span Vascular periférico
        +productContent
      .container(ng-controller="loadNeuro").w100
        a(href="#", role="contentinfo", ng-click="showThis = !showThis").col9.push3.col-t12.push-t0.col-m12.push-m0.neu: span Neurovascular
        +productContent
      .container(ng-controller="loadCCol").w100
        a(href="#", role="contentinfo", ng-click="showThis = !showThis").col9.push3.col-t12.push-t0.col-m12.push-m0.cir: span Cirugía de columna
        +productContent
